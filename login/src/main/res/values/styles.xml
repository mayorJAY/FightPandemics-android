<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/buttonselector</item>
    </style>

    <style name="AndroidNativeH122Px">
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/fightPandemicsNero</item>
    </style>

    <style name="AndroidNativeH216Px">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="AndroidNativeP311Px">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="fontFamily">@font/worksans_regular</item>
        <item name="android:textColor">@color/fightPandemicsMediumGrey</item>
    </style>

    <style name="SignUPTextHint">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/worksans_medium</item>
        <item name="android:textColorHint">@color/fightPandemicsNeonBlue</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@color/button_primary_background_selector</item>
        <item name="android:textColor">@color/button_primary_text_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="paddingStart">28dp</item>
        <item name="textAllCaps">false</item>
        <item name="paddingEnd">28dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="SocialButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="background">@drawable/btn_sign_social_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:letterSpacing">-0.008</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="elevation">15dp</item>
        <item name="iconGravity">start</item>
        <item name="iconSize">28dp</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="SignUPText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/worksans_medium</item>
        <item name="android:textColor">@color/fightPandemicsNero</item>
        <item name="android:textColorHint">@color/fightPandemicsNeonBlue</item>
    </style>

</resources>
